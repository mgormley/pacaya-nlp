<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>edu.jhu.pacaya-nlp</groupId>
  <artifactId>pacaya-nlp</artifactId>
  <version>3.1.4-beta-1</version>
  <packaging>jar</packaging>

  <name>${project.groupId}:${project.artifactId}</name>
  <description>Pacaya NLP Tools.</description>
  <url>https://github.com/mgormley/pacaya-nlp</url>

  <properties>
    <!-- The version for the Pacaya dependencies. -->
    <pacaya.version>3.1.3</pacaya.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <developers>
    <developer>
      <email>mrg@cs.jhu.edu</email>
      <name>Matt Gormley</name>
      <url>https://github.com/mgormley</url>
      <id>mgormley</id>
    </developer>
    <developer>
      <email>margarmitchell@gmail.com</email>
      <name>Meg Mitchell</name>
      <url>http://www.m-mitchell.com</url>
      <id>mmitchell</id>
    </developer>
    <developer>
      <email>travis@cs.jhu.edu</email>
      <name>Travis Wolfe</name>
      <url>https://github.com/twolfe18</url>
      <id>twolfe18</id>
    </developer>
  </developers>

  <prerequisites>
    <maven>3.0.4</maven>
  </prerequisites>

  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com:mgormley/pacaya.git</connection>
    <url>scm:git:git@github.com:mgormley/pacaya.git</url>
    <developerConnection>scm:git:git@github.com:mgormley/pacaya.git</developerConnection>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>       
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <useIncrementalCompilation>true</useIncrementalCompilation>
          <fork>true</fork>
          <!-- <compilerArgument>-verbose</compilerArgument> -->
        </configuration>
      </plugin>
      <!-- For use with: mvn clean compile assembly:single -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5.3</version>        
        <configuration>
          <archive>
            <manifest>
            </manifest>
          </archive>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.18.1</version>
        <configuration>
          <testFailureIgnore>true</testFailureIgnore>
        </configuration>
      </plugin>
      <!-- The following plugin includes alternate source directories in the compilation -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>add-test-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-test-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.basedir}/src/perf/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- This plugin allows us to update to the latest versions of prim and optimize. -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>versions-maven-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <properties>
            <property>
              <name>manchu.version</name>
              <dependencies>
                <dependency>
                  <groupId>com.foo.bar</groupId>
                  <artifactId>manchu-wibble</artifactId>
                </dependency>
              </dependencies>
            </property>
          </properties>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <!-- These plugins will only run at release time -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <executions>
              <execution>
                <id>attach-sources</id>
                <phase>verify</phase>
                <goals>
                  <goal>jar-no-fork</goal>
                </goals>
              </execution>
            </executions>
            <version>2.2.1</version>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <configuration>
              <quiet />
              <additionalparam>-Xdoclint:none</additionalparam>
            </configuration>
            <executions>
              <execution>
                <id>attach-javadoc</id>
                <phase>verify</phase>
                <goals>
                  <goal>jar</goal>
                </goals>
              </execution>
            </executions>
            <version>2.9.1</version>
          </plugin>
          <!-- GPG signing plugin for deploying to Maven Central -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.5</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <!-- Nexus Staging Maven plugin for deploying to Maven Central -->
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
            <version>1.6.1</version>
            <extensions>true</extensions>
            <configuration>
              <serverId>ossrh</serverId>
              <nexusUrl>https://oss.sonatype.org/</nexusUrl>
              <autoReleaseAfterClose>true</autoReleaseAfterClose>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <!-- For deploying to Maven Central -->
      <distributionManagement>
        <snapshotRepository>
          <id>ossrh</id>
          <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
          <id>ossrh</id>
          <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
      </distributionManagement>
    </profile>
    <profile>
      <id>clsp</id>
      <!-- For deploying to CLSP when you have an SSH tunnel setup on your machine. -->
      <distributionManagement>
        <repository>
          <id>checker</id>
          <name>checker-releases</name>
          <url>http://localhost:8081/artifactory/libs-release-local</url>
        </repository>
        <snapshotRepository>
          <id>checker</id>
          <name>checker-snapshots</name>
          <url>http://localhost:8081/artifactory/libs-snapshot-local</url>
        </snapshotRepository>
      </distributionManagement>
    </profile>
    <profile>
      <id>coe</id>
      <!-- For deploying to COE when you have an SSH tunnel setup on your machine. -->
      <distributionManagement>
        <repository>
          <id>coe-mvn</id>
          <name>coe-mvn-releases</name>
          <url>http://localhost:8081/artifactory/libs-release-local</url>
        </repository>
        <snapshotRepository>
          <id>coe-mvn-snapshots</id>
          <name>coe-mvn-snapshots</name>
          <url>http://localhost:8081/artifactory/libs-snapshot-local</url>
        </snapshotRepository>
      </distributionManagement>
    </profile>
    <profile>
      <id>coe-local</id>
      <!-- For deploying to COE when you're on the COE network. -->
      <distributionManagement>
        <repository>
          <id>coe-mvn</id>
          <name>coe-mvn-releases</name>
		  <url>http://10.162.95.47:8081/artifactory/libs-release-local</url>
        </repository>
        <snapshotRepository>
          <id>coe-mvn-snapshots</id>
          <name>coe-mvn-snapshots</name>
		  <url>http://10.162.95.47:8081/artifactory/libs-snapshot-local</url>
        </snapshotRepository>
      </distributionManagement>
    </profile>
  </profiles>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>edu.jhu.pacaya</groupId>
      <artifactId>pacaya</artifactId>
      <version>${pacaya.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>edu.jhu.pacaya</groupId>
      <artifactId>pacaya</artifactId>
      <version>${pacaya.version}</version>
    </dependency>
    <dependency>
      <groupId>edu.jhu.prim</groupId>
      <artifactId>prim</artifactId>
      <version>${pacaya.version}</version>
    </dependency>
    <dependency>
      <groupId>edu.jhu.hlt.optimize</groupId>
      <artifactId>optimize</artifactId>
      <version>${pacaya.version}</version>
    </dependency>
    <dependency>    
      <groupId>edu.jhu.hlt</groupId>
      <artifactId>concrete-core</artifactId>
      <version>4.4</version>
    </dependency>
    <dependency>
      <groupId>edu.jhu.hlt</groupId>
      <artifactId>concrete-util</artifactId>
      <version>4.4.4</version>
    </dependency>
    <dependency>
      <groupId>org.glassfish</groupId>
      <artifactId>javax.json</artifactId>
      <version>1.0.4</version>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>2.6.2</version>
    </dependency>
  </dependencies>

</project>
